		<relativePath>../org.eclipse.fx.releng/pom.xml</relativePath>
		<version>3.1.0-SNAPSHOT</version>
	</parent>

	<properties>
		<p2repo-zip-path>${project.build.directory}/site_assembly.zip</p2repo-zip-path>
	</properties>

